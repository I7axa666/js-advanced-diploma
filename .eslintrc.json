{
    "env": {
      "browser": true,
      "es2021": true,
      "node": true,
      "jest": true
    },
    "extends": "airbnb-base",
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
      "no-new": 0,
      "no-alert": "off",
      "no-bitwise": "off",
      "no-plusplus": "off",
      "consistent-return": "off",
      "class-methods-use-this": "off",
      "no-restricted-syntax": "off",
      "guard-for-in": "off"
    }
}
